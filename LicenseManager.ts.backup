    /**
     * ãƒ©ã‚¤ã‚»ãƒ³ã‚¹èªè¨¼ã‚’å®Ÿè¡Œ
     */
    private async validateLicense(): Promise<void> {
        if (!this.licenseKey) {
            this.isValid = false;
            return;
        }
        
        try {
            // é–‹ç™ºç’°å¢ƒã§ã¯èªè¨¼ã‚’ã‚¹ã‚­ãƒƒãƒ—
            if (this.isDevelopment()) {
