     */
    private async verifyWithServer(licenseKey: string): Promise<boolean> {
        try {
            const response = await fetch('https://api.varidation.com/v1/verify', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    licenseKey,
                    domain: this.domain,
                    version: this.getVersion()
                })
            });
            
            if (!response.ok) {
                return false;
            }
            
            const result = await response.json();
            return result.valid === true;
        } catch (error) {
            // ãƒãƒƒãƒˆãƒ¯ãƒ¼ã‚¯ã‚¨ãƒ©ãƒ¼ã®å ´åˆã¯ä¸€æ™‚çš„ã«è¨±å¯
