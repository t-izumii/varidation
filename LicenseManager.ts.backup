            // æœ¬ç•ªç’°å¢ƒã§ã¯å®Ÿéš›ã®èªè¨¼ã‚’è¡Œã†
            const isValid = await this.verifyWithServer(this.licenseKey);
            this.isValid = isValid;
            
            if (!isValid) {
                this.showLicenseError();
            }
        } catch (error) {
            console.warn('License validation failed:', error);
            this.isValid = false;
            this.showLicenseError();
        }
    }
    
    /**
