/**
 * ライセンス管理クラス
 * 商用版でのライセンス認証を行う
 */
export class LicenseManager {
    private static instance: LicenseManager;
    private licenseKey: string | null = null;
    private isValid: boolean = false;
    private domain: string;
    
    private constructor() {
        this.domain = this.getCurrentDomain();
    }
    
    public static getInstance(): LicenseManager {
        if (!LicenseManager.instance) {
            LicenseManager.instance = new LicenseManager();
        }
        return LicenseManager.instance;
    }
    
    /**
     * ライセンスキーを設定
     */
    public setLicenseKey(key: string): void {
        this.licenseKey = key;
        this.validateLicense();
    }
    
    /**
     * ライセンス認証を実行
     */
    private async validateLicense(): Promise<void> {
        if (!this.licenseKey) {
            this.isValid = false;
            return;
        }
        
        try {
            // 開発環境では認証をスキップ
            if (this.isDevelopment()) {
                this.isValid = true;
                return;
            }
            
            // 本番環境では実際の認証を行う
            const isValid = await this.verifyWithServer(this.licenseKey);
            this.isValid = isValid;
            
            if (!isValid) {
                this.showLicenseError();
            }
        } catch (error) {
            console.warn('License validation failed:', error);
            this.isValid = false;
            this.showLicenseError();
        }
    }
    
    /**
     * サーバーでライセンス認証
     */
    private async verifyWithServer(licenseKey: string): Promise<boolean> {
        try {
            const response = await fetch('https://api.varidation.com/v1/verify', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    licenseKey,
                    domain: this.domain,
                    version: this.getVersion()
                })
            });
            
            if (!response.ok) {
                return false;
            }
            
            const result = await response.json();
            return result.valid === true;
        } catch (error) {
            // ネットワークエラーの場合は一時的に許可
            // （ただし警告は表示）
            console.warn('License verification temporarily unavailable');
            return true;
        }
    }
    
    /**
     * ライセンスが有効かチェック
     */
    public isLicenseValid(): boolean {
        return this.isValid;
    }
    
    /**
     * ライセンスエラーを表示
     */
    private showLicenseError(): void {
        const errorMessage = `
🚫 Varidation License Required

This domain (${this.domain}) requires a valid commercial license.

Options:
1. Purchase a license: https://varidation.com/buy
2. Use the free Community Edition: https://github.com/your-org/varidation-community

For questions: license@varidation.com
        `;
        
        console.error(errorMessage);
        
        // 本番環境では機能を制限
        if (!this.isDevelopment()) {
            this.showLicenseModal();
        }
    }
    
    /**
     * ライセンス購入を促すモーダルを表示
     */
    private showLicenseModal(): void {
        // ライセンス購入を促すUIを表示
        const modal = document.createElement('div');
        modal.innerHTML = `
            <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; 
                        background: rgba(0,0,0,0.8); z-index: 999999; 
                        display: flex; align-items: center; justify-content: center;">
                <div style="background: white; padding: 30px; border-radius: 8px; 
                           max-width: 500px; text-align: center;">
                    <h2>🔐 Commercial License Required</h2>
                    <p>This domain requires a valid Varidation commercial license.</p>
                    <p><strong>Domain:</strong> ${this.domain}</p>
                    <div style="margin: 20px 0;">
                        <a href="https://varidation.com/buy" 
                           style="background: #007cba; color: white; padding: 12px 24px; 
                                  text-decoration: none; border-radius: 4px; margin: 5px;">
                            Buy License ($199/year)
                        </a>
                        <a href="https://github.com/your-org/varidation-community" 
                           style="background: #28a745; color: white; padding: 12px 24px; 
                                  text-decoration: none; border-radius: 4px; margin: 5px;">
                            Use Free Version
                        </a>
                    </div>
                    <p><small>Contact: license@varidation.com</small></p>
                </div>
            </div>
        `;
        
        document.body.appendChild(modal);
        
        // 10秒後に自動的にリダイレクト
        setTimeout(() => {
            window.location.href = 'https://varidation.com/license-required';
        }, 10000);
    }
    
    /**
     * 現在のドメインを取得
     */
    private getCurrentDomain(): string {
        if (typeof window !== 'undefined') {
            return window.location.hostname;
        }
        return 'localhost';
    }
    
    /**
     * 開発環境かどうかを判定
     */
    private isDevelopment(): boolean {
        const domain = this.getCurrentDomain();
        return domain === 'localhost' || 
               domain === '127.0.0.1' || 
               domain.includes('dev') ||
               domain.includes('staging') ||
               domain.includes('test');
    }
    
    /**
     * バージョン情報を取得
     */
    private getVersion(): string {
        return '2.0.0'; // package.jsonから動的に取得するのが理想
    }
    
    /**
     * ライセンス情報を表示
     */
    public showLicenseInfo(): void {
        console.log(`
📄 Varidation License Info
Domain: ${this.domain}
License: ${this.licenseKey ? 'Set' : 'Not set'}
Status: ${this.isValid ? '✅ Valid' : '❌ Invalid'}
Version: ${this.getVersion()}
        `);
    }
}
